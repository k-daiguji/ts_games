{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "files": {
    "includes": ["**/*.ts"]
  },
  "formatter": {
    "attributePosition": "multiline",
    "formatWithErrors": true,
    "indentStyle": "space",
    "useEditorconfig": true
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "cssModules": true
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  }
}
